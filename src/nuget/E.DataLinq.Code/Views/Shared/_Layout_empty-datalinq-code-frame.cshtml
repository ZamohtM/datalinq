@using E.DataLinq.Core
@using E.DataLinq.Core.Services.Abstraction
@inject IHostUrlHelper UrlHelper

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta http-equiv="X-UA-Compatible" content="IE=9,10,edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>@ViewBag.Title</title>
    <environment names="Development">
        <link href="~/_content/E.DataLinq.Code/css/datalinq-code.css?@(DataLinqVersion.CssVersion)" rel="stylesheet" />
        <link href="~/_content/E.DataLinq.Code/css/datalinq-code-typeahead.css?@(DataLinqVersion.CssVersion)" rel="stylesheet" />
        <link href="~/_content/E.DataLinq.Code/lib/monaco-editor/min/vs/editor/editor.main.css?@(DataLinqVersion.CssVersion)" rel="stylesheet" />
    </environment>

    <environment names="Staging,Production">
        <link href="~/_content/E.DataLinq.Code/css/datalinq-code.css?@(DataLinqVersion.CssVersion)" rel="stylesheet" />
        <link href="~/_content/E.DataLinq.Code/css/datalinq-code-typeahead.css?@(DataLinqVersion.CssVersion)" rel="stylesheet" />
        <link href="~/_content/E.DataLinq.Code/lib/monaco-editor/min/vs/editor/editor.main.css?@(DataLinqVersion.CssVersion)" rel="stylesheet" />
    </environment>

    <style>
    #datalinq-code-editor-frame {
        position:absolute;
        top:0px;
        left:0px;
        bottom:0px;
        right:0px;
    }
    </style>
</head>
<body style="overflow:auto">

    <script src="~/_content/E.DataLinq.Code/lib/jquery/jquery.min.js"></script>
    <script src="~/_content/E.DataLinq.Code/js/lib/typeahead/dist/typeahead.jquery.min.js"></script>

    <script>
			var require = { paths: { vs: '@(UrlHelper.HostAppRootUrl())/_content/E.DataLinq.Code/lib/monaco-editor/min/vs' } };
	</script>
    <script src="~/_content/E.DataLinq.Code/lib/monaco-editor/min/vs/loader.js"></script>
    <script src="~/_content/E.DataLinq.Code/lib/monaco-editor/min/vs/editor/editor.main.nls.js"></script>
    <script src="~/_content/E.DataLinq.Code/lib/monaco-editor/min/vs/editor/editor.main.js"></script>
    
    <script src="~/_content/E.DataLinq.Code/js/datalinq-code.ui.editor.frame.js?@(DataLinqVersion.JsVersion)"></script>
    <script src="~/_content/E.DataLinq.Code/js/datalinq-code.ui.editor.dlh.intellisense.js?@(DataLinqVersion.JsVersion)"></script>

    @RenderBody()

    @RenderSection("scripts", required: false)

</body>
</html>
